@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="page-wrapper pt-0">
    <div class="container">
        <div class="row">
            <form method="post" class="my-form-margin" enctype="multipart/form-data">
                <div class="col-xl-12">
                    <div class="portlet light mb recruitment-create" style="padding: 20px 20px 25px 15px;">

                        <div class="portlet-title" style="border-bottom:1px solid #778899;min-height:70px;">
                            <div class="caption">
                                <i class="fa fa-plus my-text" aria-hidden="true"></i>
                                <span class="caption-subject bold my-text"> İşçi əlavə et </span>
                            </div>
                            <div class="actions hidden">
                                <div class="btn-group btn-group-circle">
                                    <button class="btn red btn-outline" asp-action="List">
                                        <i class="fa fa-close"></i> İmtina
                                    </button>
                                    <button class="btn green btn-circle-right btn-outline" asp-action="Create">
                                        <i class="fa fa-save" aria-hidden="true"></i> Yadda saxla
                                    </button>
                                </div>
                            </div>
                        </div>
                       
                        <div class="row mt-4">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.Firstname"><span class="text-danger">* </span>Ad</label>
                                    <input asp-for="Employee.Firstname" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Firstname" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.Lastname"><span class="text-danger">* </span>Soyad</label>
                                    <input asp-for="Employee.Lastname" class="form-control e-i-h"/>
                                    <span asp-validation-for="Employee.Lastname" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.Fathername"><span class="text-danger">* </span>Ata adı</label>
                                    <input asp-for="Employee.Fathername" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Fathername" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.Birthday"><span class="text-danger">* </span>Ad günü</label>
                                    <input asp-for="Employee.Birthday" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Birthday" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.CurrentAddres"><span class="text-danger">* </span>İndiki adresi</label>
                                    <input asp-for="Employee.CurrentAddres" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.CurrentAddres" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.DistrictRegistration"><span class="text-danger">* </span>Qeydiyyatda olduğu yer</label>
                                    <input asp-for="Employee.DistrictRegistration" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.DistrictRegistration" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="custom-file">
                                    <label asp-for="Employee.Phone"><span class="text-danger">* </span>Tel</label>
                                    <input asp-for="Employee.Phone" accept="image" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Phone" class="text-danger my-error"> </span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.PassportNumber"><span class="text-danger">* </span>Şəxsiyyət vəsiqəsinin seriyası</label>
                                    <input asp-for="Employee.PassportNumber" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.PassportNumber" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.Email"><span class="text-danger">* </span>Email</label>
                                    <input asp-for="Employee.Email" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Email" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.PassportExpirationDate"><span class="text-danger">* </span>Şəxsiyyət vəsiqəsinin son istifadə tarixi</label>
                                    <input asp-for="Employee.PassportExpirationDate" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.PassportExpirationDate" class="text-danger my-error"></span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="custom-file">
                                    <label asp-for="Employee.Photo"><span class="text-danger">* </span>Şəkili</label>
                                    <input asp-for="Employee.Photo" accept="image" class="form-control e-i-h" />
                                    <span asp-validation-for="Employee.Photo" class="text-danger my-error"> </span>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Employee.EducationType"><span class="text-danger">* </span>Təhsili</label>
                                    <select class="form-control e-i-h" asp-for="Employee.EducationType" asp-items="Html.GetEnumSelectList<Education>()">
                                        <option selected="selected" value=""></option>
                                    </select>
                                    <span asp-validation-for="Employee.EducationType" class="text-danger my-error" />
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label class="display-block mr-3"><span class="text-danger"> * </span>Cinsi</label>
                                    <div class="form-check form-check-inline">
                                        @foreach (var item in Enum.GetNames(typeof(Gender)))
                                        {
                                            <input type="radio" name="gender" />
                                            <label asp-for="@item">@item</label>
                                            <input asp-for="@item" type="hidden" />
                                            <span asp-validation-for="@item" class="text-danger my-error"></span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label class="display-block mr-3"><span class="text-danger"> * </span>Ailə vəziyyəti</label>
                                    <div class="form-check form-check-inline">
                                        @foreach (var item in Enum.GetNames(typeof(MarialStatus)))
                                        {
                                            <input type="radio" name="marial" />
                                            <label asp-for="@item">@item</label>
                                            <input asp-for="@item" type="hidden" />
                                            <span asp-validation-for="@item" class="text-danger my-error"></span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                        <input id="formerworkCount" name="formerworkCount" type="hidden" value="0" />
                        <div id="buraEleveEt" class="d-none"></div>

                        <div class="row mt-2">
                            <div class="col-xl-3">
                                <button type="button" id="addformerwork" class="btn bg-color text-white btn-rounded">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    Köhnə iş yeri əlavə et
                                </button>
                            </div>
                            <div class="offset-xl-7 col-xl-2 mb-3">
                                <button type="button" id="addrecruitment" class="btn bg-color text-white btn-rounded float-right">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                    İşə qəbul
                                </button>
                            </div>
                        </div>
                   
                        <div id="recruitment" class="row formerwork" style="display:none;">

                            @await Component.InvokeAsync("Employee")

                            <div class="col-xl-6 mt-3">
                                <div class="form-group">
                                    <label class="control-label"><span class="text-danger"> * </span>İşə başlama tarixi</label>
                                    <input class="form-control" type="date" asp-for="@Model.Recruitment.WhenStarted" />
                                    <span asp-validation-for="@Model.Recruitment.WhenStarted" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-xl-6 mt-3">
                                <div class="form-group">
                                    <label class="control-label"><span class="text-danger"> * </span>Əmək haqqı</label>
                                    <input id="salary" class="form-control" asp-for="@Model.Recruitment.Amount" />
                                    <span asp-validation-for="@Model.Recruitment.Amount" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                  
                    </div>
                </div>
            </form>
            <div id="formerwork" class="row formerwork" style="display:none;">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label asp-for="@Model.FormerWorks[0].WorkName"><span class="text-danger">* </span>İş yerinin adı</label>
                        <input asp-for="@Model.FormerWorks[0].WorkName" class="form-control" />
                        <span asp-validation-for="@Model.FormerWorks[0].WorkName" class="text-danger my-error"></span>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label asp-for="@Model.FormerWorks[0].WhyLeftReason"><span class="text-danger">* </span>İşdən çıxma səbəbi</label>
                        <input asp-for="@Model.FormerWorks[0].WhyLeftReason" class="form-control" />
                        <span asp-validation-for="@Model.FormerWorks[0].WhyLeftReason" class="text-danger my-error"></span>
                    </div>
                </div>
                <div class="col-xl-6 mt-3">
                    <div class="form-group">
                        <label asp-for="@Model.FormerWorks[0].WhenStarted"><span class="text-danger">* </span>İşə başlama tarixi</label>
                        <input asp-for="@Model.FormerWorks[0].WhenStarted" class="form-control" />
                        <span asp-validation-for="@Model.FormerWorks[0].WhenStarted" class="text-danger my-error"></span>
                    </div>
                </div>
                <div class="col-xl-6 mt-3">
                    <div class="form-group">
                        <label asp-for="@Model.FormerWorks[0].WhenLeft"><span class="text-danger">* </span>İşdən çıxma tarixi</label>
                        <input asp-for="@Model.FormerWorks[0].WhenLeft" class="form-control" />
                        <span asp-validation-for="@Model.FormerWorks[0].WhenLeft" class="text-danger my-error"></span>
                    </div>
                </div>
                <button type="button" class="btn btn-danger removeFormerWork" style="margin-left:90%;">Remove</button>
            </div>
        </div>
    </div>
</div>

