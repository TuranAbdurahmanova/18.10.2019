@model Company
@{
    ViewData["Title"] = "Details";
}

<div class="container padding-top">

    <div class="row list-row bg-color ">
        <div class="col-xl-12 my-border">
            <h4 class="page-title text-white">
                <span class="caption-subject bold ml-2"> <i class="fas fa-info-circle m-r-5"></i> Şirkət haqqında detallı məlumat </span>
            </h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <form method="post" enctype="multipart/form-data" asp-controller="Company" asp-action="Edit">
                <div class="portlet light pt-4" style="padding-bottom:5%;">

                    <div class="row pt-2">
                        <div class="col-xl-12">
                            <a class="btn red bg-color text-white btn-outline border float-left" asp-action="List">
                                <i class="fas fa-long-arrow-alt-left"></i> Geri
                            </a>
                        </div>
                    </div>

                    <div class="portlet-body pt-4">
                        <div class="row company-padding">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="my-label">Şirkətin adı </label>
                                    <input asp-for="Name" class="form-control mb-2 company-edit-input" disabled />
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="OpenCompany" class="my-label">Şirkətin yaranma tarixi</label>
                                    <input asp-for="OpenCompany" class="form-control mb-2 company-edit-input" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row company-padding">
                            <div class="col-xl-12">
                                <div class="form-group">
                                    <label asp-for="Addres" class="my-label">Şirkətin faktiki ünvanı</label>
                                    <div class="input-group">
                                        <input asp-for="Addres" class="form-control company-edit-input mb-2" disabled>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row company-padding">
                            <div class="col-xl-12">
                                <div class="form-group">
                                    <label asp-for="PoctIndex" class="my-label">Şirkətin poçt indeksi</label> <br>
                                    <input asp-for="PoctIndex.Name" class="form-control company-edit-input mb-2" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row company-padding">
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="my-label">Şirkətin emaili</label>
                                    <input asp-for="Email" class="form-control mb-2 company-edit-input" disabled>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="form-group">
                                    <label asp-for="TelNumber" class="my-label">Şirkətin telefon nömrəsi</label>
                                    <input asp-for="TelNumber" class="form-control mb-2 company-edit-input" disabled>
                                </div>
                            </div>
                        </div>

                    </div>
             
                </div>
            </form>
        </div>
    </div>

</div>

