@model AbsenceViewModel
@{
    ViewData["Title"] = "List";
}

<div class="page-wrapper pt-5">
    <div class="container">

        <div class="row list-row bg-color">
            <div class="col-xl-12 my-border">
                <h4 class="page-title text-white"><i class="fas fa-chart-bar mr-3"></i> Bu günki və ya seçdiyiniz tarixə qayıb yaza bilərsiniz</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-xl-12">
                <div class="portlet light mb attendanceList" style="padding: 20px 20px 32px 15px;">

                    <div class="row my-5">
                        <div class="col-xl-5 ml-0 pr-0">
                            <input id="dateContinuity" asp-for="Continuity.Date" class="form-control i-b-c" type="date" />
                            <span class="date-icon absence"> <i class="fas fa-calendar-times"></i></span>
                        </div>
                        <div class="col-xl-1">
                            <button type="submit" class="btn btn-block bg-color searchContinuity"><i class="fas fa-search"></i></button>
                        </div>
                        <div class="col-xl-6 text-right">
                            <span class="AntiForge"> @Html.AntiForgeryToken() </span>
                            <button class="btn bg-color createSaveAbsence">
                                <i class="fa fa-save" aria-hidden="true"></i> Yadda saxla
                            </button>
                        </div>
                    </div>

                    <span id="absenceSuccess" class="my-text my-2 bold" style="font-size:20px;"></span>
                    <span id="absenceUnsuccessful" class="text-danger my-2 bold" style="font-size:20px;"></span>

                    <table class="table table-striped table-bordered continuity" style="margin-top:7%;">
                        <thead>
                            <tr>
                                <th><i class="far fa-image"></i></th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Növü</th>
                                <th>Səbəbi</th>
                                <th>Qayıb</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Recruitments)
                            {
                                <tr>
                                    <td> <img style="width:30px; height:30px; border-radius:100%;" class="img-thumnail" src="~/img/@item.Employee.Image" /></td>
                                    <td>
                                        @item.Employee.Firstname
                                    </td>
                                    <td>
                                        @item.Employee.Lastname
                                    </td>
                                    <td>
                                        <select class="form-control" asp-for="@Model.Continuity.PermissionType" asp-items="Html.GetEnumSelectList<Permission>()">
                                            <option selected="selected" value=""></option>
                                        </select>
                                        <span asp-validation-for="@Model.Continuity.PermissionType" class="text-danger my-error" />
                                    </td>
                                    <td>
                                        <input class="form-control" asp-for="Continuity.Reason" />
                                        <span asp-validation-for="@Model.Continuity.Reason" class="text-danger"></span>
                                    </td>
                                    <td><input class="checkbox" type="checkbox" data-id="@item.Id"></td>
                                </tr>
                            }
                            <tr class="d-none" id="trContinuity">
                                <td>
                                    <img style="width:30px; height:30px; border-radius:100%;" class="img-thumnail" src="~/img/" />
                                </td>
                                <td></td>
                                <td></td>
                                <td>
                                    <select class="form-control" asp-for="@Model.Continuity.PermissionType" asp-items="Html.GetEnumSelectList<Permission>()">
                                        <option selected="selected" value=""></option>
                                    </select>
                                    <span asp-validation-for="@Model.Continuity.PermissionType" class="text-danger my-error" />
                                </td>
                                <td>
                                    <input class="form-control" asp-for="Continuity.Reason" />
                                </td>
                                <td><input class="checkbox" type="checkbox" data-id=""></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    
    </div>
</div>




