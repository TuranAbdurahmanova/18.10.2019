@model PayrollViewModel
@{
    ViewData["Title"] = "Salary";
}

<div class="page-wrapper padding-top">
    <div class="container">
        <div class="row list-row bg-color">
            <div class="col-xl-12 my-border">
                <h4 class="page-title text-white"> <i class="fas fa-calculator"></i> Aylıq əmək haqqının ödənilməsi</h4>
            </div>

        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="portlet light mb payrollSalary payroll-list-scroll" style="padding: 17px 20px 20px 15px;">
                        <div class="form-row employee">
                            <div class="col-xl-5 ml-0 form-group">
                                <input id="payrollSalaryDate" asp-for="Payroll.Date" class="form-control search-input" type="date" />
                            </div>
                            <div class="col-xl-1">
                                <button type="submit" class="btn btn-block bg-color payrollSalarySearch"><i class="fas fa-sync-alt"></i></button>
                            </div>
                            <div class="col-xl-6">
                                <button class="btn bg-color createSavePayroll float-right">
                                    <i class="fa fa-save" aria-hidden="true"></i> Əmək haqqını hesabla
                                </button>
                            </div>
                        </div>
                    <div class="row">
                        <div class="col-xl-12">
                            <span id="salaryDate" class="my-text bold"></span>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered payrollSalaryTable mt-5 pb-5">
                        <thead>
                            <tr>
                                <th><input id="selectAllEmployee" type="checkbox" /></th>
                                <th><i class="far fa-image"></i></th>
                                <th>Ad</th>
                                <th>Soyad</th>
                                <th>Şirkət</th>
                                <th>Vəzifə</th>
                                <th>Mağaza</th>
                                <th>Maaş</th>
                            </tr>
                        </thead>
                        <tbody class="salary-tbody">
                            @foreach (var item in Model.Recruitments)
                            {
                                <tr>
                                    <td><input type="checkbox" class="form-control salary-checkbox" value="@item.Id" /></td>
                                    <td> <img style="width:30px; height:30px; border-radius:100%;" class="img-thumnail" src="~/img/@item.Employee.Image" /></td>
                                    <td> @item.Employee.Firstname</td>
                                    <td>@item.Employee.Lastname</td>
                                    <td>@item.Shop.Company.Name</td>
                                    <td>@item.Position.Name</td>
                                    <td> @item.Shop.Name</td>
                                    <td>@item.Amount</td>
                                </tr>

                            }

                            <tr id="trPayrollSalary" class="d-none">
                                <td><input type="checkbox" class="form-control" style="width:100%" value="" /></td>
                                <td> <img style="width:30px; height:30px; border-radius:100%;" class="img-thumnail" src="~/img/" /></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




