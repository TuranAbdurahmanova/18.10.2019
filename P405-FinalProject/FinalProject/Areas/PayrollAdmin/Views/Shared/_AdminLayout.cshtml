<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Final Project</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" media="screen" href="~/payroll/css/main.css" />
</head>

<body>
    <header class="d-flex">

        <div class="header-left">
            <img src="~/payroll/img/logo.png"> <span>Payroll</span>
        </div>

        <ul class="navbar-right">
            <li><span>Admin</span> </li>
            <li class="text-white">
                <img src="~/img/employee/turan.jpg" >
            </li>
            <li><a class="text-white" asp-controller="Account" asp-action="Logout">Logout</a></li>
        </ul>

    </header>

    <div class="wrapper">
        <nav id="sidebar">
            <ul class="list-unstyled components">
                <li class="list" style="border-top:1px solid white;">
                    <a href="#company" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle company-d firts-li-a">
                        <i class="far fa-building"></i>
                        <span>Şirkətlər</span>
                    </a>
                    <ul class="collapse list-unstyled" id="company">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Company" asp-action="Create"><i class="fa fa-plus"></i> Şirkət əlavə et</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Company" asp-action="List"><i class="fas fa-list"></i> Şirkətlərin siyahısı</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a asp-area="PayrollAdmin" asp-controller="Departament" asp-action="List" class="dropdown-toggle departmant firts-li-a">
                        <i class="fas fa-sitemap"></i>
                        <span>Departamentlər</span>
                    </a>
                </li>
                <li class="list">
                    <a href="#shop" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle shop firts-li-a">
                        <i class="fas fa-shopping-bag"></i>
                        <span>Mağazalar</span>
                    </a>
                    <ul class="collapse list-unstyled" id="shop">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Shop" asp-action="List"><i class="fas fa-list"></i> Mağazaların siyahısı</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Shop" asp-action="ShopProfitList"><i class="fas fa-money-bill-alt"></i> Aylıq gəliri</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#position" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle position firts-li-a">
                        <i class="fas fa-crosshairs"></i>
                        <span>Vəzifələr</span>
                    </a>
                    <ul class="collapse list-unstyled" id="position">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Position" asp-action="List"><i class="fas fa-list"></i> Vəzifələrin siyahısı</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Position" asp-action="Recruitment"><i class="fas fa-exchange-alt"></i> Vəzifənin dəyişilməsi</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#employee" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle employee firts-li-a">
                        <i class="fas fa-users-cog"></i>
                        <span>Namizədlər</span>
                    </a>
                    <ul class="collapse list-unstyled" id="employee">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Employee" asp-action="Create"><i class="fa fa-plus"></i> Namizəd əlavə et</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Employee" asp-action="List"><i class="fas fa-list"></i> Namizədlərin siyahısı</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle recruitment firts-li-a">
                        <i class="fas fa-users"></i>
                        <span> İşçilər</span>
                    </a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Recruitment" asp-action="Create"><i class="fa fa-plus"></i> İşçi əlavə et</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Recruitment" asp-action="List"><i class="fas fa-list"></i> İşçilərin siyahısı</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#attendence" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle attendence firts-li-a">
                        <i class="fas fa-chart-bar"></i>
                        <span> Qayıblar </span>
                    </a>
                    <ul class="collapse list-unstyled" id="attendence">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Absence" asp-action="List"><i class="fas fa-chart-bar"></i> Günlük davamiyyət</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Absence" asp-action="Attendance"><i class="fas fa-chart-bar"></i> Aylıq davamiyyət</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#bonus" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle position firts-li-a">
                        <i class="fas fa-plus-square"></i>
                        <span>Bonuslar</span>
                    </a>
                    <ul class="collapse list-unstyled" id="bonus">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Bonus" asp-action="Create"><i class="fa fa-plus"></i> Bonus əlavə et</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Bonus" asp-action="List"><i class="fas fa-list"></i> Bonuslu işçilər</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Bonus" asp-action="ShopBonus"><i class="fas fa-plus-square"></i> Mağaza üzrə bonus</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#penalty" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle penaltyy firts-li-a">
                        <i class="fas fa-minus-square"></i>
                        <span>Cərimələr</span>
                    </a>
                    <ul class="collapse list-unstyled" id="penalty">
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Penalty" asp-action="Create"><i class="fa fa-plus"></i> Cərimə əlavə et</a>
                        </li>
                        <li>
                            <a asp-area="PayrollAdmin" asp-controller="Penalty" asp-action="List"><i class="fas fa-list"></i> Cəriməli işçilər</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle payroll firts-li-a">
                        <i class="fas fa-calculator"></i>
                        <span>Maaşlar</span>
                    </a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li class="pl-4">
                            <a asp-area="PayrollAdmin" asp-controller="Payroll" asp-action="List"><i class="fas fa-file-invoice-dollar"></i> Hesabat</a>
                        </li>
                        <li class="pl-4">
                            <a asp-area="PayrollAdmin" asp-controller="Payroll" asp-action="Salary">Əmək haqqının ödənilməsi</a>
                        </li>
                    </ul>
                </li>
                <li class="list">
                    <a asp-area="PayrollAdmin" asp-controller="Vacation" asp-action="List" class="dropdown-toggle departmant firts-li-a">
                        <i class="fas fa-plane-departure"></i>
                        <span>Məzuniyyət</span>
                    </a>
                </li>
            </ul>
        </nav>

        @RenderBody()

    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/305c3deb2c.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="~/payroll/js/ajax.js"></script>
    <script src="~/payroll/js/main.js"></script>

    <script>
        $(document).ready(function () {
            $("#selectAllEmployee").change(function (e) {
                if (this.checked) {
                    $(".payrollSalaryTable tbody td input[type='checkbox']").prop("checked", true);
                }
                else {
                    $(".payrollSalaryTable tbody td input[type='checkbox']").prop("checked", false);
                }
            });
        });
    </script>

    @RenderSection("scripts", required: false)

</body>
</html>